# Fantasy Probability Calculator Configuration
# Copy this file to .env and add your API keys

# Sports Betting APIs
# REQUIRED: The Odds API (https://the-odds-api.com/) - Free tier: 500 requests/month
THE_ODDS_API_KEY=your_the_odds_api_key_here

# OPTIONAL: OddsAPI.com - Alternative odds source (not required, The Odds API is sufficient)
# ODDS_API_KEY=your_odds_api_key_here

# ESPN Configuration
ESPN_BASE_URL=https://www.espn.com

# Database Configuration
DATABASE_PATH=fantasy_data.db

# Calculator Settings
UPDATE_INTERVAL_MINUTES=30
MAX_FANTASY_VALUE=100
MIN_PROFIT_MARGIN=0.05

# Sports to track (NCAA Focus)
SPORTS=['ncaaf', 'ncaab']

# NCAA Sports Configuration
NCAA_FOOTBALL_SEASON_START=2024-08-24
NCAA_BASKETBALL_SEASON_START=2024-11-01
NCAA_CONFERENCES=['SEC', 'Big Ten', 'ACC', 'Big 12', 'Pac-12', 'AAC', 'Mountain West', 'MAC', 'Sun Belt', 'C-USA']
